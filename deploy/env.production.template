# AlgoFeast - Production Environment Variables
# Copy this to algofeast-workspace/algofeast-api/.env on your EC2 instance

ENVIRONMENT=production
DEBUG=false
SECRET_KEY=generate_a_strong_random_secret_here_12345
CORS_ORIGINS=https://algofeast.com,https://www.algofeast.com

# Database
DATABASE_PATH=data/algofeast.db

# Zerodha Kite Connect
KITE_API_KEY=your_api_key
KITE_API_SECRET=your_api_secret
KITE_REDIRECT_URI=https://algofeast.com/auth-token

# LLM Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_key
AGENT_MODEL=gpt-4-turbo-preview
AGENT_TEMPERATURE=0.3

# Trading Configuration
TRADING_CAPITAL=200000.0
RISK_PER_TRADE_PCT=1.0
REWARD_PER_TRADE_PCT=3.0
MAX_POSITION_SIZE=200000.0
DAILY_LOSS_LIMIT=5000.0

# Autonomous Mode
AUTONOMOUS_MODE=false
AUTONOMOUS_SCAN_INTERVAL_MINS=5
AUTONOMOUS_TARGET_GROUP=top 10 nifty50 stocks

